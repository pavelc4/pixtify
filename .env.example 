PORT=8080
ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=pixtify
DB_PASSWORD=pixtify_dev_password
DB_NAME=pixtify_db
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# OAuth Cookie Secret
COOKIE_SECRET=your-super-secret-cookie-key-min-32-chars-long

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URL=http://localhost:8080/api/auth/github/callback

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URL=http://localhost:8080/api/auth/google/callback

# Storage 
STORAGE_PROVIDER=minio
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=pixtify_admin
STORAGE_SECRET_KEY=pixtify_secret_key
STORAGE_BUCKET_ORIGINALS=pixtify-originals
STORAGE_BUCKET_THUMBNAILS=pixtify-thumbnails
STORAGE_USE_SSL=false
# CDN_BASE_URL= optional